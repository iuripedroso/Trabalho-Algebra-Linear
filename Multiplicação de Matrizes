#include <iostream>

using namespace std;

int main() {
    int linha, coluna, linha2, coluna2, i = 0, j, k;

    do {
        cout << "Insira o numero de linhas e colunas da primeira e segunda matriz" << endl << "1Â° = ";
        cin >> linha >> coluna;
        cout << "2Â° = ";
        cin >> linha2 >> coluna2;

        if (coluna == linha2) {
            i++;
        } else {
            cout << endl << "O numero de colunas da primeira matriz deve ser igual ao numero de linhas da segunda matriz!" << endl;
        }
    } while (i != 1);

    int M1[linha][coluna];
    int M2[linha2][coluna2];
    int mul[linha][coluna2]; // Resultante 

    cout << "Insira os valores da primeira matriz" << endl;
    for (i = 0; i < linha; i++) {
        for (j = 0; j < coluna; j++) {
            cin >> M1[i][j];
        }
    }

    cout << "Insira os valores da segunda matriz" << endl;
    for (i = 0; i < linha2; i++) {
        for (j = 0; j < coluna2; j++) {
            cin >> M2[i][j];
        }
    }

    cout << "Multiplicacao das matrizes: "<< endl;
    for (i = 0; i < linha; i++) {
        for (j = 0; j < coluna2; j++) {
            mul[i][j] = 0;
            for (k = 0; k < coluna; k++) {
                mul[i][j] += M1[i][k] * M2[k][j];
            }
            cout << mul[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}

